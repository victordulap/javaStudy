<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Add-->
    <servlet>
        <servlet-name>addServlet</servlet-name>
        <servlet-class>org.edu.servlet.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!--List-->
    <servlet>
        <servlet-name>listServlet</servlet-name>
        <servlet-class>org.edu.servlet.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <!--Delete-->
    <servlet>
        <servlet-name>deleteServlet</servlet-name>
        <servlet-class>org.edu.servlet.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <!--Edit-->
    <servlet>
        <servlet-name>editServlet</servlet-name>
        <servlet-class>org.edu.servlet.EditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>


</web-app>